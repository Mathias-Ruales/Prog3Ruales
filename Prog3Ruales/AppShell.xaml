<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Prog3Ruales.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Prog3Ruales.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Prog3Ruales">

    <TabBar>
        <ShellContent
            Title="Agregar Pelicula"
            ContentTemplate="{DataTemplate local:AgregarPeliculasPage}">
        </ShellContent>
        <ShellContent
            Title="Lista de Peliculas"
            ContentTemplate="{DataTemplate local:ListaPeliculasPage}">
        </ShellContent>
        <ShellContent
            Title="Logs"
            ContentTemplate="{DataTemplate local:LogsPage}">
        </ShellContent>
    </TabBar>

</Shell>
