<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prog3Ruales.Views.AgregarPeliculasPage"
             Title="Mathias Ruales 01/003/2003">
    <VerticalStackLayout 
        Padding="20"
        Spacing="15">
        <Entry
            x:Name="txtTitulo"
            TextColor="Black"
            Placeholder="Ingrese el título de la película"
            HorizontalOptions="Center" />
        <Entry 
            x:Name="txtGenero"
            TextColor="Black"
            Placeholder="Ingrese el genero de la pelicula"
            HorizontalOptions="Center"/>
        <Entry
            x:Name="txtAnio"
            TextColor="Black"
            Placeholder="Ingrese el año que se estreno la pelicula"
            HorizontalOptions="Center"/>
        <Entry
            x:Name="txtCalificacion"
            TextColor="Black"
            Placeholder="Ingrese la calificacion"
            HorizontalOptions="Center"/>
        <Button
            Text="Agregar Película"
            BackgroundColor="#007AFF"
            TextColor="Black"
            HorizontalOptions="Center"
            Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>